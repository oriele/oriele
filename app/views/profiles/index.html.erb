<p id="notice"><%= notice %></p>

<%= form_tag(profiles_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Employee" %>
<%= submit_tag "Search" %>
<% end %>

<% if @profiles.present? %>
  <%= render @profiles %>
<% else %>
  <p>There are no employee named <%= params[:search] %>.</p>
<% end %>

<p><h1>Employee Profiles</h1> </p>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Address</th>
      <th>Age</th>
      <th>Mobile</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.surname %></td>
        <td><%= profile.address %></td>
        <td><%= profile.age %></td>
        <td><%= profile.mobile %></td>
        <td><%= profile.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
