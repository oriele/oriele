<p id="notice"><%= notice %></p>

<p><h1>Request Annual Leave</h1></p>

<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Departament</th>
      <th>Start</th>
      <th>End</th>
      <th>Phone</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= website.surname %></td>
        <td><%= website.departament %></td>
        <td><%= website.start %></td>
        <td><%= website.end %></td>
        <td><%= website.phone %></td>
        <td><%= website.details %></td>
        <td><%= link_to 'Show', website %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

